{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,    
    // "declaration": true,
    // "declarationDir": "./types",
    "noImplicitAny": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es6"
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
