{
  "source": {
    "include": "./src",
    "includePattern": "\\.(jsx|js|ts|tsx)$"
  },
  "opts": {
    "template": "node_modules/better-docs",
    "encoding": "utf-8",
    "destination": "./docs",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "outputSourceFiles": false
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/typescript"
  ],
  "typescript": {
    "moduleRoot": "./src"
  },
  "tags": {
    "allowUnknownTags": ["optional"]
  }   
}